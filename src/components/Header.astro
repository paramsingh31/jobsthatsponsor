---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";
---

<header>
  <Container>
    <div class="flex flex-wrap gap-y-2 justify-between">
      <Link href="/" underline={false}>
        <img 
          src="/logo.svg" 
          alt="Jobs That Sponsor" 
          class="h-8 w-auto md:h-10"
        />
      </Link>
      <nav class="flex items-center gap-4">
        <Link href="https://access.jobsthatsponsor.com/#/portal/signin" underline={false} class="text-body-secondary hover:text-black transition-colors">
          Sign In
        </Link>
        <a href="https://access.jobsthatsponsor.com/#/portal/signup" rel="noopener noreferrer" target="_blank" class="bg-blue-600 text-white px-4 py-2 rounded-full font-medium hover:bg-blue-700 transition-colors text-sm">
          Get Access
        </a>
      </nav>
    </div>
  </Container>
</header>
